.results
  width 75%
  margin 4em auto
  border-radius 16px
  padding 2em
  
  p
    font-weight 900
    font-size 1.5em
    text-align center
    margin 0 auto
    &.info
      font-weight 400
      font-size 1.15em
      color #444

  &.good
    border 5px dashed #4ED45F
    color #4ED45F
    p.info
      max-width 50%

  &.bad
    border 5px dashed #FF495C
    color #FF495C

  .result
    color #444
    margin-top 2em
    p
      font-size 1.15em
      text-align left
    .package
      color #FF495C
    .versions
      float right
      color #FF495C
    .alert
      width 90%
      font-weight 400
      margin 0.5em  auto
    .links
      width 90%
    ul
      margin 0 0 0 5%
      font-size 1.15em