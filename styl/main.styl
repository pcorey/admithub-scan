body {
    width: 100%;
    height: 100%;
    overflow-y: scroll;
    margin: 0;
    text-align: center;
    color: $color3;
    background-color: white;
}

p {
    line-height: 23px;
}

hr {
	border: 1px solid #eee;
	margin: 3em auto;
	width: 50%;
}

:not(pre) > code[class*="language-"], pre[class*="language-"] {
  background-color: transparent !important;
}

pre[class*="language-"] {
  background-color: #f9f9f9 !important;
}